name: Build TypeScript

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20' # при необходимости поменяйте версию

      - name: Install dependencies
        run: npm ci

      - name: Build TypeScript
        run: npm run build
