<div id="fighter{{id}}" class="list-group-item p-0">
  <div class="row m-0 p-0 align-middle ">
    <img>
    <div class="col-6 row">
      <img style="height: 56px; width: auto;" id="fighter{{id}}-img" src="{{img}}" alt="" class="btn-group-item d-inline bg-white rounded-2 p-0 d-inline col-auto">
      <div class="align-middle my-auto col">
      <span id="fighter{{id}}-name" class="py-2">{{name}}</span></div>
    </div>
    
    <div style="margin-right: 0px;" class="col-auto ms-auto px-0 py-2 my-auto me-5">
      x<span id="fighter{{id}}-count">{{count}}</span> max Hp: <span id="fighter{{id}}-maxHp">
        {{maxHp}}
      </span>
    </div>
    <div class="col-auto m-0 p-0 ms-1 my-auto me-3">
      <button type="button" class="badge text-bg-primary" data-bs-toggle="modal" data-bs-target="#fighterModal" data-id="{{id}}">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16" style="--darkreader-inline-fill: currentColor;" data-darkreader-inline-fill="">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"></path>
        </svg></button>
    </div>
  </div>
</div>